#include <iostream>
using namespace std;
int main()
{
	int n; cin >> n;
	for (int i = 1; i <= n; i++) {
		int r = n + (i - 1);
		int l = n - (i - 1);
		for (int j = 1; j <= n * 2 - 1; j++) {
			if (j >= l && j <= r)cout << "*";
			else if (j < l) cout << " ";
		}
		cout << endl;
 
	}
	for (int i = n; i > 0; i--) {
		int r = n + (i - 1);
		int l = n - (i - 1);
		for (int j = 1; j <= n * 2 - 1; j++) {
			if (j >= l && j <= r)cout << "*";
			else if (j<l) cout << " ";
		}
		cout << endl;
 
	}
}
