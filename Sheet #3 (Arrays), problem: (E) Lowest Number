
#include <iostream>
using namespace std;
int main() {
    int n; cin >> n;

    long* p = new long[n];

    long m;
   
    for (int i = 0; i < n; i++) {
        cin >> p[i];
        if (i == 0)m = p[i];
        if (p[i] < m)m = p[i];

    }
   
    for (int i = 0; i <= n; i++) {
        if (p[i] == m){
            cout << m << " " << i+1;
            break;
    }



    return 0;
}
